<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hint="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.woofer.activity.MainActivity"
    android:background="#ECE9EC"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#198E7B"
        android:id="@+id/act_three_info">
    </TextView>
    <android.support.v4.view.ViewPager
        android:id="@+id/vPager1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/act_three_info"
        ></android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通知"

        android:id="@+id/act_three_inform">
    </TextView>
            <TextView
                android:id="@+id/act_three_informTV"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="#198E7B">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="私信"
                android:id="@+id/act_three_privateletter">

            </TextView>
            <TextView
                android:id="@+id/act_three_privateTV"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#198E7B">

            </TextView>
        </LinearLayout>
    </LinearLayout>



    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:textSize="18dp"
        android:text="清空"
        />
