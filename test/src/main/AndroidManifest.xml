<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.woofer.test">

    <!-- 在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
