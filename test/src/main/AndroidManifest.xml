        <activity android:name="com.woofer.activity.userhomepage.FansActivity" />
        <activity android:name="com.woofer.activity.userhomepage.FollowingsActivity" />
        <activity android:name="com.woofer.activity.userhomepage.ArticleActivity" />
        <activity android:name="com.woofer.activity.ConversationActivity" />
        <activity android:name="com.woofer.activity.CommentActivity"
            android:windowSoftInputMode="adjustResize"
