        <activity
            android:name="com.woofer.activity.EditNoteActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity android:name="com.woofer.activity.WelcomeActivity">
		<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.woofer.activity.LoginActivity" />
        <activity android:name="com.woofer.activity.SigninActivity" />
        <activity android:name="com.woofer.activity.ChooseActivity" />
        <activity android:name="com.woofer.activity.UserInfoActivity" />
        <activity android:name="com.woofer.activity.ConfigActivity" />
